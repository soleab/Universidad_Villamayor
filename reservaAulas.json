{
  "swagger": "2.0",
  "info": {
    "description": "Aplicación para gestión y realizar la reserva de aulas y laboratorios de distintos centros de la UV.",
    "version": "2.0.0",
    "title": "Universidad de Villamayor. Gestión de recursos",
    "termsOfService": ""
  },
  "tags": [
    {
      "name": "Aulas",
      "description": "Gestión y reserva de aulas"
    }
  ],
  "schemes": [
    "https"
  ],
  "paths": {
    "/Aulas": {
      "get": {
        "tags": [
          "Aulas"
        ],
        "summary": "Obtener la información de un aula",
        "operationId": "infoAula",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "información del aula buscada por su nombre",
            "type": "string",
            "required": true,
            "items": {
              "type": "array"
            },
            "collectionFormat": "multi"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid Order"
          },
          "500": {
            "description": "unexpected error"
          }
        }
      },
      "put": {
        "tags": [
          "Aulas"
        ],
        "summary": "Realizar reserva de un aula",
        "operationId": "reservar",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "Reservar",
            "in": "body",
            "description": "aula a reservar",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Aula"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Aula reservada"
          },
          "404": {
            "description": "Aula not encontrada"
          },
          "405": {
            "description": "Validation exception"
          },
          "500": {
            "description": "unexpected error"
          }
        }
      }
    },
    "/Aulas/Libres": {
      "get": {
        "tags": [
          "Aulas"
        ],
        "summary": "Mostrar aulas sin asignar todavía",
        "operationId": "aulasLibres",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "Libre",
            "in": "query",
            "description": "si el aula todavía esta sin asignar",
            "type": "boolean",
            "required": true,
            "collectionFormat": "multi"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid Order"
          },
          "500": {
            "description": "unexpected error"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "Aula": {
      "type": "object",
      "properties": {
        "Id": {
          "type": "string",
          "description": "nombre del aula"
        },
        "Fecha": {
          "type": "string",
          "description": "fecha de la reserva"
        },
        "Centro": {
          "type": "string",
          "description": "centro a la que pertenece el aula"
        },
        "Tipo": {
          "type": "string",
          "description": "Si se trata de aula grande o laboratorio"
        },
        "Precio": {
          "type": "integer",
          "format": "int64",
          "description": "precio del aula por hora"
        },
        "Libre": {
          "type": "boolean",
          "description": "si el aula esta libre"
        }
      }
    }
  }
}